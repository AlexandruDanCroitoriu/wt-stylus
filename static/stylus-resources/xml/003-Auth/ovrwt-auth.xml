<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">
    <message id="Wt.Auth.template.login">
        <div class="Wt-form Wt-auth-login">
            <h2>${tr:Wt.Auth.login-form-title}</h2>
            <p class="  ">${tr:Wt.Auth.login-form-info}</p>
            <div class="Wt-fields">
        ${<if:passwords>}
          <label for="${id:user-name}"><span>${user-name-label}</span>
                        <span>${user-name-info class="Wt-info"}</span>
                        <span>${user-confirm-email class="Wt-info"}</span>
                    </label>
                    <span>${user-name}</span>
                    <span>
                        <label for="${id:password}">
                            <span>${tr:Wt.Auth.password}</span>
                            <span>${password-info class="Wt-info"}</span>
                        </label>
                        <span>${password}</span>
                    </span>
                    <span>
                        <label for="${id:remember-me}">
                            <span>${tr:Wt.Auth.remember-me}</span>
                            <span>${remember-me-info class="Wt-info"}</span>
                        </label>
                        <span>${remember-me}</span>
                    </span>
         ${</if:passwords>}
      </div>
      ${<if:oauth>}
        <div class="Wt-col-right"><h3>Or use:</h3>
                    <span>${icons}</span>
                </div>
      ${</if:oauth>}
      <div class="Wt-buttons">${login}</div>
            <div class="Wt-buttons">
                <span>${lost-password}</span>
                <span>${sep}</span>
                <span>${register}</span>
            </div>
        </div>
    </message>
    <message id="Wt.Auth.template.registration">
        <div class="Wt-form Wt-auth-registration">
            <h2>${tr:Wt.Auth.registration-form-title}</h2>
            <p>${tr:Wt.Auth.registration-form-info}</p>
            <span>${password-description}</span>
            <div class="Wt-fields">
        ${<if:user-name>}
          <label for="${id:user-name}"><span>${user-name-label}</span>
                        <span>${user-name-info class="Wt-info"}</span>
                        <span>${confirm-is-you class="Wt-info"}</span>
                    </label>
                    <span>${user-name}</span>
        ${</if:user-name>}
        		<span><label for="${id:choose-password}"><span>${tr:Wt.Auth.choose-password}</span>
                        <span>${choose-password-info class="Wt-info"}</span>
                    </label>
                    <span>${choose-password}</span>
                </span>
                <span>
                    <label for="${id:repeat-password}">
                        <span>${tr:Wt.Auth.repeat-password}</span>
                        <span>${repeat-password-info class="Wt-info"}</span>
                    </label>
                    <span>${repeat-password}</span>
                </span>
                <span>
                    <label for="${id:email}">
                        <span>${tr:Wt.Auth.email}</span>
                        <span>${email-info class="Wt-info"}</span>
                    </label>
                    <span>${email}</span>
                </span>
            </div>
      ${<if:oauth>}
        <br clear="both"/><span>${oauth-description}</span>
                <label>
                    <span>${tr:Wt.Auth.oauth}</span>
                    <span class="Wt-info">${tr:Wt.Auth.oauth-info}</span>
                </label>
                <span>${icons}</span>
      ${</if:oauth>}
      <div class="Wt-buttons"><span>${ok-button}</span>
                <span>${cancel-button}</span>
            </div>
        </div>
    </message>
    <message id="Wt.Auth.template.update-password">
        <div class="Wt-form Wt-auth-update-password">
            <h2>${tr:Wt.Auth.update-password-form-title}</h2>
            <p>${tr:Wt.Auth.update-password-form-info}</p>
            <div class="Wt-fields">
                <label for="${id:user-name}">${tr:Wt.Auth.user-name}</label>
                <span>${user-name}</span>
                <span>
                    <label for="${id:password}">
                        <span>${tr:Wt.Auth.password}</span>
                        <span>${password-info class="Wt-info"}</span>
                    </label>
                    <span>${password}</span>
                </span>
                <span>
                    <label for="${id:choose-password}">
                        <span>${tr:Wt.Auth.choose-password}</span>
                        <span>${choose-password-info class="Wt-info"}</span>
                    </label>
                    <span>${choose-password}</span>
                </span>
                <span>
                    <label for="${id:repeat-password}">
                        <span>${tr:Wt.Auth.repeat-password}</span>
                        <span>${repeat-password-info class="Wt-info"}</span>
                    </label>
                    <span>${repeat-password}</span>
                </span>
            </div>
            <div class="Wt-buttons">
                <span>${ok-button}</span>
                <span>${cancel-button}</span>
            </div>
        </div>
    </message>
    <message id="Wt.Auth.template.lost-password">
        <div class="Wt-form Wt-auth-lost-password">
            <h2>${tr:Wt.Auth.lost-password-form-title}</h2>
            <p>${tr:Wt.Auth.lost-password-form-info}</p>
            <div class="Wt-fields">
                <label for="${id:email}">
                    <span>${tr:Wt.Auth.email}</span>
                    <span class="Wt-info">${tr:Wt.Auth.email-info}</span>
                </label>
                <span>${email}</span>
            </div>
            <div class="Wt-buttons">
                <span>${send-button}</span>
                <span>${cancel-button}</span>
            </div>
        </div>
    </message>
    <message id="Wt.Auth.template.password-prompt">
        <div class="Wt-form Wt-auth-password-prompt">
            <h2>${tr:Wt.Auth.password-prompt-form-title}</h2>
            <p>${tr:Wt.Auth.password-prompt-form-info}</p>
            <div class="Wt-fields">
                <label for="${id:user-name}">${tr:Wt.Auth.user-name}</label>
                <span>${user-name}</span>
                <span>
                    <label for="${id:password}">
                        <span>${tr:Wt.Auth.password}</span>
                        <span>${password-info class="Wt-info"}</span>
                    </label>
                    <span>${password}</span>
                </span>
            </div>
            <div class="Wt-buttons">
                <span>${ok-button} </span>
                <span>${cancel-button}</span>
            </div>
        </div>
    </message>
    <message id="Wt.Auth.template.logged-in">
        <div class="Wt-auth-logged-in">
            <b>${user-name}</b>
            <span>${logout}</span>
        </div>
    </message>
    <message id="Wt.Auth.template.totp">
        <div class="Wt-form Wt-auth-login">
            <h2>${tr:Wt.Auth.totp-title}</h2>
            <p>${tr:Wt.Auth.totp-info}</p>
            <div class="Wt-fields">
        ${<if:no-secret-key>}
          <span>${qr-code}</span>
                    <span>${tr:Wt.Auth.totp-qr-code-explanation}</span>
                    <p>
                        <span>Secret key: </span>
                        <span>${secret-key}</span>
                    </p>
        ${</if:no-secret-key>}
        <label for="${id:totp-code}"><span>${tr:Wt.Auth.totp-code}</span>
                    <span class="Wt-info">${totp-code-info}</span>
                </label>
                <span>${totp-code}</span>
                <span>
                    <label for="${id:remember-me}">
                        <span>${tr:Wt.Auth.remember-me}</span>
                        <span>${remember-me-info class="Wt-info"}</span>
                    </label>
                    <span>${remember-me}</span>
                </span>
            </div>
            <div class="Wt-buttons">
                <span>${login} </span>
                <span>${logout}</span>
            </div>
        </div>
    </message>
</messages>
